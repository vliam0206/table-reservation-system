	"item": [
		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Log In Test\", function(){\r",
							"    var jsonData = JSON.parse(responseBody);\r",
							"    pm.globals.set(\"TOKEN\", jsonData.data);\r",
							"\r",
							"    // Assert that the access token is removed\r",
							"    pm.expect(pm.globals.has(\"TOKEN\")).to.be.true;\r",
							"\r",
							"    // Validate the response status code\r",
							"    pm.response.to.have.status(200);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": {
						"token": "{{TOKEN}}"
					}
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"userName\": \"lamlam\",\r\n  \"password\": \"123\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": "{{HOST}}/api/Auth/login"
			},
			"response": []
		},
		{
			"name": "Get Current ID",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": {
						"token": "{{TOKEN}}"
					}
				},
				"method": "GET",
				"header": [],
				"url": "{{HOST}}/api/Auth/current-id"
			},
			"response": []
		},
		{
			"name": "Get Current Username",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": {
						"token": "{{TOKEN}}"
					}
				},
				"method": "GET",
				"header": [],
				"url": "{{HOST}}/api/Auth/current-username"
			},
			"response": []
		}
	]
